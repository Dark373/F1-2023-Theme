                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingRight": 50,
                                "PaddingLeft": 50,
                                "Height": 92,
                                "WWidth": 730,
                                "Background": "{BackgroundDefault}",
                                "Triggers": [
        {
            "Condition": "{DarkOfficialRenders}",
            "Property": "Background",
            "Value": "171717",
        }
    ],                                
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "FontName": "{Formula1-Bold}",
                                        "FontSize": 60,
                                        "Foreground" : "FFFFFF",
