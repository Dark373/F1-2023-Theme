{
    "BlockType" : "stack",
    "Witdh" : "*",
    "Background": "1F1F1F",
    "MarginRight": 12,
    "MarginLeft": 12,
    "Orientation" : "Vertical",
    "Items" : [
        {
            "BlockType" : "dock",
            "Orientation" : "Horizontal",
            "VerticalAlignment": "Center",
            "Width" : "auto",
            "Height" : 60,
            "MarginTop" : 0,
            "MarginBottom" : 0,
            "Padding": "0, 0",
            "Items" : [
                {
                    "BlockType" : "stack",
                    "Width" : 80,
                    "Orientation" : "Vertical",
                    "MarginRight" : 0,
                    "Padding": "0, 0",
                    "Items" : [
                        {
                            "BlockType" : "dock",
                            "Orientation" : "Horizontal",
                            "Width" : "",
                            "Height" : 60,
                            "Items" :[
                                    {
                                "BlockType": "text",
                                "Padding": "40, 20",
                                "Source": "R{Item.Position, Converter=NumberSubtract, Parameter=1}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameBold}",
                                "Foreground": "#FFFFFF",
                                "FontSize": 28,
                                "Background": "FF0000",
                                "Triggers":[
                                    {
                                        "Condition":"{Item.IsChampionshipStatus, Converter=BoolReverse}",
                                        "Setters":[
                                            {
                                                "Property": "Source",
                                                "Value": "R0"
                                            }
                                        ]
                                    }
                                ],
                                "TextOptions": {
                                    "HorizontalAlignment": "Center"
                                }
                        },
                            ]
                        },
                        {
                            "BlockType": "text",
                            "Foreground" : "{ForeGroundWhite}",
                            "FontName" : "{Formula1-Bold}",
                            "MarginTop" : -5,
                            "HorizontalAlignment": "Left",
                            "Source" : ""
                        }
                    ]
                },
                {
                                "BlockType": "stack",
                                "PaddingLeft": 12,
                                "PaddingRight": 12,
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "Background": "",
                                "Items": [
                                    //flag
                                    {
                                        "BlockType": "image",
                                        "Height": 50,
                                        "Width": 55,
                                        //"Padding" : "0, 0",
                                        "PaddingTop": 0,
                                        "PaddingBottom": 0,
                                        "MarginRight": 0,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Track.Nation.LogoPath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    },
                                ]
                        },
                {
                            "WidthStretch": true,
                               "BlockType" : "stack",
                            "Background": "#1F1F1F",
                    "Width" : "*",
                    "Orientation" : "Vertical",
                    "Items" : [
                        {
                            "BlockType": "text",
                            "Foreground" : "FFFFFF",
                    "Orientation" : "Vertical",
                            "FontName" : "{FontNameDefault}",
                            "VerticalAlignment": "Center",
                            "FontSize" : 12,
                            "MarginTop" : 5,
                            "Source" : "{Item.Date, Converter=DateToDayOfMonth} [{Item.Date, Converter=DateToMonthInWords}]"
                        },
                        {
                            "BlockType" : "dock",
                            "Orientation" : "Horizontal",
                            "Width" : "*",
                            "Items" : [
                                {
                                    "BlockType": "text",
                                    "Foreground" : "FF0000",
                                    "HorizontalAlignment": "Left",
                                    "FontName" : "{FontNameBold}",
                                    "FontSize" : 16,
                                    "Source" : "[{Item.Track.CountryName, converter=StringToUpperString}]",
                                    "Triggers":[
                                    {
                                        "Condition":"{Item.IsChampionshipStatus, Converter=BoolReverse}",
                                        "Setters":[
                                            {
                                                "Property": "Source",
                                                "Value": "PRE-SEASON"
                                            }
                                        ]
                                    }
                                ]
                                },
                                
                                    ]
                                  },
{
                            "BlockType" : "dock",
                            "Orientation" : "Horizontal",
                            "Width" : "*",
                            "Items" : [
                                {
                                    "BlockType": "text",
                                    "Foreground" : "FFFFFF",
                                    "HorizontalAlignment": "Left",
                                    "FontName" : "{FontNameBold}",
                                    "FontSize" : 12,
                                    "Source" : "[{Item.Track.LocationName, Converter=StringToUpperString}]"
                                },
                                    ]
                                  }
                                ]
                            
                        },
                        {
                                    "BlockType":"itemstack",
                                    "Orientation" : "Horizontal",
                                    "HorizontalAlignment":"Right",
                                    "ItemStackOptions" : {
                                        "ItemSource" : "{Item.Races}",
                                        "Template" : {
                                            "BlockType" : "image",
                                            "Height": 58,
                                            "Width": 18,
                                            "MarginRight": 1,
                                            "Source": "images/sprint.png",
                                            "HorizontalAlignment" : "Right",
                                            "FontName" : "{Formula1-Bold}",
                                            "RenderIf" : "{Item.RaceType, converter=StringEquals, parameter=Sprint}"
                                        }
                                    }
                                }
            ]
        },
{
            "BlockType" : "shape",
            "Width" : "350",
            "Height" : 10,
            "ShapeOptions" : {
                "ShapeType" : "rectangle",
                "Fill" : "#FFFFFF"
            }
        }
    ]
}
