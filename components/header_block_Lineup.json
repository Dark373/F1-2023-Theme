//header block
{
    "Name": "headerBlock",
    "BlockType": "dock",
    "Padding": "15,15,0,0",
    "Orientation": "Horizontal",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Spacing": 0,
            "HorizontalAlignment": "Left",
            "Items": [
                //league name
                {
                    "BlockType" : "stack",
                    "VerticalAlignment" : "Center",
                    "Items" :
                    [
                         {                            
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": "{Season.LeagueInfo.LeagueShortName, Converter=StringToUpperString} {Season.Name, Converter=StringToUpperString}",                            
                            "FontName": "{FontNameBold}",
                            "FontSize": 40,
                            "Foreground": "FFFFFF"
                        },
                        {                            
                            "BlockType": "text",
                            "Source": "",                            
                            "FontName": "{FontNameBlack}",
                            "FontSize": 40,
                            "Foreground": "{ForegroundDefault}",
                            "Triggers": [
                                {
                                    "Condition": "{Season.LeagueCategory.ShortName, Converter=StringEquals, Parameter=T2}",
                                    "Setters": [
                                        {
                                            "Property": "Foreground",
                                            "Value": "{ForegroundT2}"
                                        }
                                    ]
                                }
                            ]
                        }]
                },
                {
                    "Name": "headerSessionLine",
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Spacing": 0,
                    "Items": [
                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": "LINE-UP",
                            "FontName": "{FontNameBold}",
                            "FontSize": 70,
                            "Foreground": "{Foregroundwhithe}"
                        },

                        {
                            "Name": "LocationName",
                            "BlockType": "text",
                            //"MarginLeft": 12,
                            //"MarginTop": 2,
                            "VerticalAlignment": "Center",
                            "Source": "",
                            "FontName": "{FontNameBold}",                            
                            "FontSize": 18,
                            "Foreground": "{Foregroundwhithe}"
                        }
                    ]
                },       
            ]
        },

        //headerRight
        {
            "Name": "headerRightPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "MarginLeft" : 48,
            "HorizontalAlignment": "Right",
            "Items": [
                {
                    "BlockType": "stack",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Spacing": 8,
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Right",
                                    "Source": "",
                                    "FontName": "{FontNameWide}",
                                    "Foreground" : "{ForegroundDarker}",
                                    "FontSize": 18
                                },

                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Right",
                                    "Source": "",
                                    "FontName": "{FontNameWide}",                                   
                                    "FontSize": 18
                                }                                
                            ]
                        },

                        {
                            "Name": "leagueLogo",
                            "BlockType": "image",
                            "Height": 82,
                            "MarginLeft": 36,
                            "Source": ""
                        }
                    ]
                }
            ]
        }
    ]
}